<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_card_view_height"
    card_view:cardBackgroundColor="#cdd7d8">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_title_text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tvQRSettingsItemTitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/settings_detail_text"
                android:id="@+id/tvQRSettingsItemDetail"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_info_text"
            android:id="@+id/tvShareLabel"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareCheckBox"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>